extends ../layout

block content
    div.w3-center.w3-margin(style="padding: 4%")
        h1.w3-padding Add Console
        h4.w3-text-red: b= error
        div
            form(action="/admin/consoles/add", method="POST")
                input(id="form_name", type="text", name="name", placeholder="Console Name")
                br
                input(id="form_year", type="text", name="year", placeholder="Release Year")
                br
                input(id="form_dev", type="text", name="developer", placeholder="Console Developer")
                br
                br
                input.w3-button(type="submit", value="Add Console", style="margin: 0 auto;")