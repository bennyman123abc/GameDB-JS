extends ../layout.pug

block content
    div.w3-center.w3-margin(style="padding: 4%")
        h1.w3-padding Login
        h4.w3-text-red: b= error
        div
            form(action="/auth/login", method="POST")
                input.w3-input(type="text", name="username", placeholder="Username", style="width: 30%; margin: 0 auto")
                br
                //- br
                input.w3-input(type="password", name="password", placeholder="Password", style="width: 30%; margin: 0 auto")
                br
                br
                input.w3-button.w3-round.w3-opacity(type="submit", value="Login")