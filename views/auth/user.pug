extends ../layout

mixin consoleContribTable(consoles)
  div.w3-card
    table.w3-table.w3-striped
      tr
        th Name
        th Release Year
        th Developer
      for console in consoles
        tr
          td= console["name"]
          td= console["rel_year"]
          td= console["developer"]

block content
  div.w3-center.w3-panel.w3-border-bottom
    h1= viewUser["username"] + "'s Profile"
    h2: b= "Role: " + viewUser["role"].charAt(0).toUpperCase() + viewUser["role"].slice(1)
  div.w3-row.w3-mobile
    div.w3-half.w3-container.w3-center(style="margin: 2%")
      h2 Newly Contributed Consoles
      +consoleContribTable(consoles)
